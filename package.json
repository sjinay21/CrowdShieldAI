{
  "name": "smart-cctv-surveillance-system",
  "private": true,
  "version": "2.0.0",
  "type": "module",
  "description": "AI-Powered CCTV Surveillance System with Crowd Analysis",
  "keywords": ["surveillance", "cctv", "crowd-analysis", "computer-vision", "react", "nodejs"],
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "server": "node backend/server.js",
    "dev:server": "nodemon backend/server.js",
    "dev:full": "concurrently \"npm run dev:server\" \"npm run dev\"",
    "setup:python": "cd backend/python_integration && chmod +x setup_python.sh && ./setup_python.sh",
    "start:python": "cd backend/python_integration && source crowd_analysis_env/bin/activate && python3 crowd_analysis.py",
    "install:all": "npm install && cd backend && npm install"
  },
  "dependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.4",
    "@types/ws": "^8.5.10",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "ejs": "^3.1.10",
    "express": "^4.21.2",
    "lucide-react": "^0.344.0",
    "mongoose": "^8.16.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.7.4",
    "ws": "^8.16.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.9.1",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.18",
    "concurrently": "^8.2.2",
    "eslint": "^9.9.1",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "eslint-plugin-react-refresh": "^0.4.11",
    "globals": "^15.9.0",
    "nodemon": "^3.0.1",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.5.3",
    "typescript-eslint": "^8.3.0",
    "vite": "^5.4.2"
  }
}